<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.quizapp.MainActivity"
    android:id="@+id/contentMain"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Professor's Dumbledore name?" />

        <EditText
            android:id="@+id/questionOneInput"
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="His name is..."
            android:inputType="textCapWords"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Lord Voldemort born name include:" />

        <CheckBox
            android:id="@+id/tom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Tom" />

        <CheckBox
            android:id="@+id/john"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="John" />

        <CheckBox
            android:id="@+id/marvolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Marvolo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Harry Potter parents:" />

        <CheckBox
            android:id="@+id/lily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Lily" />

        <CheckBox
            android:id="@+id/liliana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Liliana" />

        <CheckBox
            android:id="@+id/george"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="George" />

        <CheckBox
            android:id="@+id/james"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="James" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Professor's McGonagall first name:" />

        <RadioGroup
            android:id="@+id/fourthQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/sterva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sterva" />

            <RadioButton
                android:id="@+id/minerva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minerva" />

            <RadioButton
                android:id="@+id/meduza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meduza" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Draco Malfoy aunt's name is:" />

        <RadioGroup
            android:id="@+id/fifthQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/bathilda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bathilda Bagshot" />

            <RadioButton
                android:id="@+id/narcissa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Narcissa Malfoy" />

            <RadioButton
                android:id="@+id/bellatrix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bellatrix Lestrange" />
        </RadioGroup>

        <Button
            style="@style/ButtonsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getResult"
            android:text="Get Result" />

    </LinearLayout>
</ScrollView>
