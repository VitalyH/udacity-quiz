<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.quizapp.MainActivity"
    android:id="@+id/contentMain"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/first_question" />

        <EditText
            android:id="@+id/questionOneInput"
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/first_question_hint"
            android:inputType="textCapWords"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/second_question" />

        <CheckBox
            android:id="@+id/tom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/second_q_1" />

        <CheckBox
            android:id="@+id/john"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/second_q_2" />

        <CheckBox
            android:id="@+id/marvolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/second_q_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/third_question" />

        <CheckBox
            android:id="@+id/lily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/third_q_1" />

        <CheckBox
            android:id="@+id/liliana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/third_q_2" />

        <CheckBox
            android:id="@+id/george"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/third_q_3" />

        <CheckBox
            android:id="@+id/james"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/third_q_4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/fourth_question" />

        <RadioGroup
            android:id="@+id/fourthQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/sterva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fourth_q_1" />

            <RadioButton
                android:id="@+id/minerva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fourth_q_2" />

            <RadioButton
                android:id="@+id/meduza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fourth_q_3" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/fifth_question" />

        <RadioGroup
            android:id="@+id/fifthQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/bathilda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fifth_q_1" />

            <RadioButton
                android:id="@+id/narcissa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fifth_q_2" />

            <RadioButton
                android:id="@+id/bellatrix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fifth_q_3" />
        </RadioGroup>

        <Button
            style="@style/ButtonsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getResult"
            android:text="@string/result_button" />

    </LinearLayout>
</ScrollView>
